{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "lib": ["es5"],
    "strictPropertyInitialization": false
  },
  "include": [
    "src/index.ts"
  ]
}
